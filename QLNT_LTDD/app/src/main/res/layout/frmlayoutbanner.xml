<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAFCB8" >

    <View
        android:id="@+id/view4"
        android:layout_width="434dp"
        android:layout_height="768dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/banner_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="383dp"
        android:layout_height="628dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/banner_inside_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view4" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="337dp"
        android:layout_height="142dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view4"
        app:srcCompat="@drawable/banner" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="309dp"
        android:layout_height="29dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/topproduct_background"
        android:gravity="center"
        android:text="Top Sản Phẩm Bán Chạy "
        android:textColor="@color/white"

        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_updateBanner"
        android:layout_width="85dp"
        android:layout_height="37dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_du_background"
        android:insetLeft="10dp"
        app:backgroundTint="@null"
        app:icon="@drawable/update"
        app:iconTint="@null"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/ibtn_down"
        android:layout_width="66dp"
        android:layout_height="52dp"
        android:layout_marginStart="172dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/list_button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/buttondown" />

</androidx.constraintlayout.widget.ConstraintLayout>